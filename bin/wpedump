#!/usr/bin/env bash

IN="$1"
IFS='@' read -ra PARTS <<< "$IN"

USR="${PARTS[0]}"
# SSHADDR="${PARTS[1]}"

# echo "scp -O \"${1}:sites/${USR}/wp-config.php\" > \"${PWD}/wpe-config.php\""
scp -O "$1":sites/"$USR"/wp-config.php "$PWD"/wpe-config.php 
scp -O "$1":sites/"$USR"/wp-content/mysql.sql "$PWD"/"$USR".sql

# wp-config-new-db 

